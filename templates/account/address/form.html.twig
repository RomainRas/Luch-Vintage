{#!  Vue User Account modif adress #}
{% extends 'base.html.twig' %}

{% block body %}
<section class="adress-form">
    <div class="container my-5">
        <h1>Espace membre</h1>
        
        
        {#? https://getbootstrap.com/docs/5.3/layout/columns/#how-they-work #}
        <div class="row">
            <div class="col-md-3">
                {% include 'account/menu.html.twig' %}
            </div>   
            <div class="col-md-9">  
                <h5>Mes addresses</h5>

                {{ form_start(addressForm ) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(addressForm.firstname) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(addressForm.lastname) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(addressForm.address) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(addressForm.postal) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(addressForm.city) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(addressForm.country) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(addressForm.phone) }}
                        </div>
                    </div>
                {{ form_end(addressForm ) }}
            </div>   
        </div>
    </div>
</section>
{% endblock %}